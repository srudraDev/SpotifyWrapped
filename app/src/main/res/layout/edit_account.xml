<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:minWidth="400dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="15dp"
    tools:context=".SettingsPage"
    >
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightGray"
            android:src="@mipmap/cancelbutton_foreground"
            android:onClick="myDialog_hide"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update Account Information"
            android:textSize="25dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Email:"/>

        <EditText
            android:id="@+id/edit_account_email"
            android:layout_width="275dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Password:"/>

        <EditText
            android:id="@+id/edit_account_password"
            android:layout_width="275dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Changes"
            android:layout_gravity="center"
            android:backgroundTint="@color/mainGreen"
            android:textColor="@color/white"
            android:onClick="successful_account_edit"
            />




</LinearLayout>