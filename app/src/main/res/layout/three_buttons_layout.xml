<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:drawableBottom="@drawable/ic_gear"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/refresh_btn"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:drawableBottom="@drawable/ic_refresh"
        android:background="#00000000"
        app:layout_constraintEnd_toStartOf="@+id/settings_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/share_btn"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:drawableBottom="@drawable/share"
        android:background="#00000000"
        app:layout_constraintEnd_toStartOf="@id/refresh_btn"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>